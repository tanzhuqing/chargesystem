<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="chargesystem.LoginForm"
	x:Name="Window"
	Title="LoginForm"
	Width="400" Height="300">

	<Grid x:Name="LayoutRoot">
		<TextBlock HorizontalAlignment="Left" Height="23" Margin="58,99,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="57" FontSize="13.333"><Run Language="zh-cn" Text="用户名："/></TextBlock>
		<TextBlock HorizontalAlignment="Left" Height="29" Margin="51,0,0,87" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="67" FontSize="13.333"><Run Language="zh-cn" Text="  密   码："/></TextBlock>
		<TextBox Height="24" Margin="119,97,101,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
		<PasswordBox Height="24" Margin="121,0,101,95" VerticalAlignment="Bottom"/>
		<Border BorderBrush="Black" BorderThickness="1" Height="72" Margin="6,4,5,0" VerticalAlignment="Top"/>
		<Button Content="登  录" HorizontalAlignment="Left" Height="33" Margin="91,0,0,27" Style="{DynamicResource SimpleButton}" VerticalAlignment="Bottom" Width="76" Click="login"/>
		<Button Content="取  消" Height="32" Margin="0,0,103,28" Style="{DynamicResource SimpleButton}" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="76" Click="cancel"/>
		<Border BorderBrush="Black" BorderThickness="1" Margin="7,79,6,13"/>
	</Grid>
</Window>